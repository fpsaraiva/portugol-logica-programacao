programa {
  funcao inicio() {
    
    inteiro numero

    escreva("Digite um número de 1 a 3: ")
    leia(numero)

    escolha(numero) {
      caso 1:
        escreva("Número escolhido foi ", numero)
      pare

      caso 2:
        escreva("Número escolhido foi ", numero)
      pare

      caso 3:
        escreva("Número escolhido foi ", numero)
      pare

      caso contrario:
        escreva("Opção não encontrada")
      pare
    } 
  }
}
