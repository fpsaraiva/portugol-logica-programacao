programa {
  funcao inicio() {
    //Soma: Desenvolva um algoritmo que leia dois números e exiba a soma deles

    inteiro numero1, numero2

    escreva("Digite o primeiro número: ")
    leia(numero1)

    escreva("\nDigite o segundo número: ")
    leia(numero2)

    inteiro soma = numero1 + numero2

    escreva("\nA soma dos dois números digitados é ", soma)
  }
}
